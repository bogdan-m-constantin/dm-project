            Width="590"/>

        <TextBlock HorizontalAlignment="Left" Margin="1208,708,0,0" TextWrapping="Wrap" Text="Canny" VerticalAlignment="Top"/>
        <Image x:Name="Canny" HorizontalAlignment="Left" Height="200" Margin="1075,733,0,0" VerticalAlignment="Top"
