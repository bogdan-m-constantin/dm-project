            Width="300"/>
        <TextBox x:Name="ImagePath" HorizontalAlignment="Left" Height="18" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="687"/>
        <Button x:Name="LoadImage" Content="Load Image" HorizontalAlignment="Left" Margin="711,9,0,0" VerticalAlignment="Top" Height="19" Width="79"/>

    </Grid>
</Window>
