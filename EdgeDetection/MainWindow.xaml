               Width="300"/>
        <TextBlock HorizontalAlignment="Left" Margin="151,284,0,0" TextWrapping="Wrap" Text="Sobel" VerticalAlignment="Top"/>
        <Image x:Name="Sobel" HorizontalAlignment="Left" Height="386" Margin="31,314,0,0" VerticalAlignment="Top"
            Source="https://randomwordgenerator.com/img/picture-generator/g33815e6df811c258a606a9a313eb798de88de92031fc196fe0bb1d4bd4fa6be7c59d43cfbfedd1268b185db543d21ba8_640.jpg"
            Width="574"/>

        <TextBlock HorizontalAlignment="Left" Margin="959,292,0,0" TextWrapping="Wrap" Text="Prewit" VerticalAlignment="Top"/>
        <Image x:Name="Prewitt" HorizontalAlignment="Left" Height="377" Margin="660,314,0,0" VerticalAlignment="Top"
            Source="https://randomwordgenerator.com/img/picture-generator/g33815e6df811c258a606a9a313eb798de88de92031fc196fe0bb1d4bd4fa6be7c59d43cfbfedd1268b185db543d21ba8_640.jpg"
            Width="566"/>

        <TextBlock HorizontalAlignment="Left" Margin="1580,286,0,0" TextWrapping="Wrap" Text="Laplacian" VerticalAlignment="Top"/>
